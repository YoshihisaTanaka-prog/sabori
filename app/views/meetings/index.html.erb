<p id="notice"><%= notice %></p>

<h1>Meetings</h1><br>
<% if current_user.id == 1 %>
  |<%= @num1 %>|<%= @num2 %>|<%= @num3 %>|<%= @num4 %>|
<% end %>
<br>
<%= link_to "ユーザー情報の編集", edit_user_registration_path %>
<br><br>
<%= link_to "エクセル出力", meetings_path(format: :xlsx) %>
<br><br>
<table>
  <thead>
    <tr>
      <th>Eventid</th>
      <th>Fiscalyear</th>
      <th>Eventnumber</th>
      <th>Field</th>
      <th>Title</th>
      <th>Keyword</th>
      <th>Organization</th>
      <th>Start</th>
      <th>End</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.eventId %></td>
        <td><%= meeting.fiscalYear %></td>
        <td><%= meeting.eventNumber %></td>
        <td><%= meeting.field %></td>
        <% if meeting.url == "" %>
          <td style="color: #f00;"><%= meeting.title %></td>
        <% else %>
          <td><a href="<%= meeting.url %>"><%= meeting.title %></a></td>
        <% end %>
        <td><%= meeting.keyword %></td>
        <td><%= meeting.organization %></td>
        <td><%= meeting.start %></td>
        <td><%= meeting.end %></td>
        <td><%= meeting.place %></td>
        <td><%= link_to 'Show', meeting %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path %>
