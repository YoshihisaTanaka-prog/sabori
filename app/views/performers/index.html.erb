<p id="notice"><%= notice %></p>

<h1>Performers</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Organization</th>
      <th>Role</th>
      <th>Lastname</th>
      <th>Firstname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performers.each do |performer| %>
      <tr>
        <td><%= performer.event_id %></td>
        <td><%= performer.organization %></td>
        <td><%= performer.role %></td>
        <td><%= performer.lastname %></td>
        <td><%= performer.firstname %></td>
        <td><%= link_to 'Show', performer %></td>
        <td><%= link_to 'Edit', edit_performer_path(performer) %></td>
        <td><%= link_to 'Destroy', performer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

