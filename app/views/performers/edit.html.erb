<h1>Editing Performer</h1>



<%= form_for(@performer, url: program_path, method: :patch) do |f| %>
    <%= f.hidden_field :event_id, value: @performer.event_id %>
    <%= f.hidden_field :event_program_id, value: @performer.event_program_id %>
    <%= f.label :organization, "所属" %>
    <%= f.text_field :organization, value: @performer.organization %>
    <%= f.label :role, "役職" %>
    <%= f.text_field :role, value: @performer.role %>
    <%= f.label :lastname, "姓" %>
    <%= f.text_field :lastname, value: @performer.lastname %>
    <%= f.label :firstname, "名" %>
    <%= f.text_field :firstname, value: @performer.firstname %><br>
    <%= f.submit "作成" %>
<% end %>
<br>
<%= link_to 'Show', @performer %> |
<%= link_to 'Back', "/programs/" + @program.id.to_s %>
